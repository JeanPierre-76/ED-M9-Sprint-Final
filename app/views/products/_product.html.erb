<div id="<%= dom_id product %>">
  <% @usuario = User.find_by_id(product.user_id) %>

    <div class="card  mb-3" style="width: 12rem;">
      <% if product.photo.attached? %>
          <%= link_to (image_tag product.photo, class: "card-img-top"), product %> 
      <% else %>
          <%= link_to (image_tag "ejemplo.jpg", class: "card-img-top"), product %> 
      <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to "#{product.title}", product %></h5>
      <h5 class="card-title"></h5>
      <p class="card-text"><%= product.price %></p>
      <p class="card-text text-muted">Foto de: <%= link_to "#{@usuario.name}", products_path(user_id: product.user_id ) %></p>
      <p class="card-text text-muted">
        <% if product.tickets.any? %>
          <% product.tickets.each do |q| %>
            #<%= link_to "#{q.name}", root_path, class: "text-muted"  %> <%# Cambiar por ruta de los tag %>
          <% end %>
        <% else %>
          <p class="card-text text-muted">Sin etiquetas</p>
        <% end %> 
      </p>

      <% if product.photo.attached? %>
        <% image_tag product.photo, class: "photo-product" %>
      <% end %>
      
    </div>
  </div>

</div>
